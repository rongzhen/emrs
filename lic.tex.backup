\begin{frame}
\frametitle{What materials am I working on?}
\begin{center}
%\includegraphics[height=0.65\textwidth]{figures/defence_figs_1.eps}
\begin{itemize}
 \item Commercial materials: \\
  \hspace{2.5cm} Cu(In,Ga)Se\textsubscript{2} and Cu\textsubscript{2}(Zn, Sn)Se\textsubscript{4}.
 \item High absorption materials: \\
   \hspace{2.5cm} Cu(Sb,Bi)(S,Se)\textsubscript{2} and Cu\textsubscript{3}(Sb,Bi)(S,Se)\textsubscript{3}.
 \item Noval materials: \\
  \hspace{2.5cm} Cu\textsubscript{2}S, SnS, Cu\textsubscript{2}SnS\textsubscript{3} and Cu\textsubscript{4}SnS\textsubscript{4}.
 \end{itemize}
\end{center}
\end{frame}



\begin{frame}
\frametitle{Motivation}
{\large We want to understand Cu-based materials for solar cells. }
\begin{center}
\begin{itemize}
 \item Why some materials have high or low absorption coefficient?
 \item How good band-gap can we obtain using theoretical calculation?
 \end{itemize}
\end{center}
\end{frame}


\begin{frame}
\frametitle{Computational methods}
%\begin{columns}[c]
\begin{itemize}
 \item Fundamental methods
 
  \begin{itemize}
  \item Density-functional theory (DFT). 
  \item Kohn-Sham (KS) equation. 
 \end{itemize}
 \item Beyond DFT
 \begin{itemize}
  \item GW approximation. 
  \item Heyd-Scuseria-Ernzerhof (HSE) hybrid functional. 
 \end{itemize}
 \end{itemize}

\end{frame}


